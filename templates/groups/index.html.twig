{% extends 'base.html.twig' %}

{% block title %}Groups index{% endblock %}

{% block body %}
    <h1>Groups index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Group_id</th>
                <th>Name</th>
                <th>Image_url</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for group in groups %}
            <tr>
                <td>{{ group.id }}</td>
                <td>{{ group.groupId }}</td>
                <td>{{ group.name }}</td>
                <td>{{ group.imageUrl }}</td>
                <td>
                    <a href="{{ path('app_groups_show', {'id': group.id}) }}">show</a>
                    <a href="{{ path('app_groups_edit', {'id': group.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_groups_new') }}">Create new</a>
{% endblock %}
